{
	"$schema": "https://mintlify.com/schema.json",
	"name": "Unbound",
	"logo": {
		"dark": "/logo/u-dark.svg",
		"light": "/logo/u-light.svg"
	},
	"favicon": "/logo/u-dark.svg",
	"colors": {
		"primary": "#c74050",
		"light": "#c74050",
		"dark": "#c74050",
		"background": {
			"dark": "#0c0c0c",
			"light": "#fcfcfc"
		},
		"anchors": {
			"from": "#c74050",
			"to": "#9e333f"
		}
	},
	"modeToggle": {
		"default": "dark",
		"isHidden": true
	},
	"background": {
		"style": "gradient"
	},
	"anchors": [
		{
			"name": "Discord Community",
			"icon": "discord",
			"url": "https://discord.gg/fops"
		}
	],
	"feedback": {
		"suggestEdit": true,
		"raiseIssue": true,
		"feedback.thumbsRating": true
	},
	"search": {
		"prompt": "Search"
	},
	"layout": "topnav",
	"sidebar": {
		"items": "container"
	},
	"api": {
		"auth": {
			"method": "bearer"
		}
	},
	"navigation": [
		{
			"group": "",
			"pages": [
				"introduction",
				"roadmap"
			]
		},
		{
      "group": "Resource Packs",
      "pages": [
            "resourcepacks/3dcropsrevamped",
			"resourcepacks/alacrity",
			"resourcepacks/barebones",
			"resourcepacks/cubicsunandmoon",
		    "resourcepacks/defaultdarkmode",
        	"resourcepacks/dramaticskys",
			"resourcepacks/enchanticons",
        	"resourcepacks/enhancedbossbars",
		    "resourcepacks/evenbetterenchants",
        	"resourcepacks/fastbettergrass",
        	"resourcepacks/freshanimations",
            "resourcepacks/freshmoves",
		    "resourcepacks/fullbright",
			"resourcepacks/icons",
        	"resourcepacks/lowonfire",
		    "resourcepacks/motschenbetterleaves",
        	"resourcepacks/programmerartfix",
		    "resourcepacks/roundtrees",
			"resourcepacks/xalienhancedvanilla"
      ]
    },
    {
      "group": "Essentials",
      "pages": [
        "essentials/markdown",
        "essentials/code",
        "essentials/images",
        "essentials/settings",
        "essentials/navigation",
        "essentials/reusable-snippets"
      ]
    }
	],
	"footerSocials": {
		"x": "https://twitter.com/UnboundClient",
		"github": "https://github.com/unbound-mod",
		"discord": "https://discord.gg/unbound"
	}
}