{
	"$schema": "https://mintlify.com/schema.json",
	"name": "Unbound",
	"logo": {
		"dark": "/logo/u-dark.svg",
		"light": "/logo/u-light.svg"
	},
	"favicon": "/logo/u-dark.svg",
	"colors": {
		"primary": "#c74050",
		"light": "#c74050",
		"dark": "#c74050",
		"background": {
			"dark": "#0c0c0c",
			"light": "#fcfcfc"
		},
		"anchors": {
			"from": "#c74050",
			"to": "#9e333f"
		}
	},
	"modeToggle": {
		"default": "dark",
		"isHidden": true
	},
	"background": {
		"style": "grid"
	},
	"anchors": [
		{
			"name": "Discord Community",
			"icon": "discord",
			"url": "https://discord.gg/unbound"
		},
		{
			"name": "GitHub",
			"icon": "github",
			"url": "https://github.com/unbound-mod"
		}
	],
	"feedback": {
		"suggestEdit": true,
		"raiseIssue": true
	},
	"search": {
		"prompt": "Search documentation..."
	},
	"layout": "topnav",
	"sidebar": {
		"items": "container"
	},
	"api": {
		"auth": {
			"method": "bearer"
		}
	},
	"navigation": [
		{
			"group": "",
			"pages": [
				"introduction",
				"roadmap"
			]
		},
		{
      "group": "Resource Packs",
      "pages": [
        "resourcepacks/dramatickys",
        "resourcepacks/enhancedbossbars",
        "resourcepacks/fastbettergrass",
        "resourcepacks/freshanimations",
		"resourcepacks/motschenbetterleaves"
      ]
    },
    {
      "group": "Essentials",
      "pages": [
        "essentials/markdown",
        "essentials/code",
        "essentials/images",
        "essentials/settings",
        "essentials/navigation",
        "essentials/reusable-snippets"
      ]
    }
	],
	"footerSocials": {
		"x": "https://twitter.com/UnboundClient",
		"github": "https://github.com/unbound-mod",
		"discord": "https://discord.gg/unbound"
	}
}